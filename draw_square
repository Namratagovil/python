import turtle
jack = turtle.Turtle()
jack.color("yellow")

def draw_square(sides, forward, angle):
    for sides in range(sides):
        jack.forward(forward)
        jack.right(angle)
        
draw_square(4,100,90)

jack.penup()
jack.back(150)
jack.pendown()

draw_square(4,100,90)
jack.forward(100)
draw_square(4,100,90)
jack.forward(100)
draw_square(4,100,90)
